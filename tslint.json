{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts",
            "node_modules/**/*.js"
        ]
    },
    "rules": {
        "max-line-length": [
            true,
            120
        ],
        "member-access": false,
        "object-literal-sort-keys": false,
        "semicolon": [
            true,
            "never"
        ],
        "no-consecutive-blank-lines": [
            true,
            2
        ],
        "no-trailing-whitespace": false,
        "max-classes-per-file": [
            true,
            20
        ],
        "no-console": [
            false
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ]
    },
    "jsRules": {
        "max-line-length": [
            true,
            120
        ],
        "member-access": false,
        "object-literal-sort-keys": false,
        "semicolon": [
            true,
            "never"
        ],
        "no-consecutive-blank-lines": [
            true,
            2
        ],
        "no-trailing-whitespace": false,
        "max-classes-per-file": [
            true,
            20
        ],
        "no-console": [
            false
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ]
    }
}
